@using EntityLayer.Concrete
@model dynamic

@{

}
<div class="container-md shadow-sm bg-body mt-5">

    <div class="row bg-dark text-white">
        <div class="col-4 my-auto">
            <a href="#"><i class="bi bi-instagram text-white"></i></a>
            <a href="#"><i class="bi bi-twitter text-white"></i></a>
            <a href="#"><i class="bi bi-google text-white"></i></a>
            <a href="#"><i class="bi bi-linkedin text-white"></i></a>
        </div>
        <div class="col-4 ms-auto text-end p-0">
            <div class="btn-group">
                <a class="btn btn-dark rounded-0 text-light" href="~/Kayit/Index">
                    <i class="bi bi-person-add"></i>
                </a>
                <a href="~/Giris/Index" class="btn rounded-0 text-light" style="background-color: #035AA6 !important;" data-bs-toggle="modal"
                        data-bs-whatever="Giris">
                    <i class="bi bi-person"></i>
                </a>
            </div>
        </div>

    </div>
    <div class="row d-none d-md-block altmenu">
        <ul class="nav">
            @foreach (var category in Model.category)
            {
                <li class="nav-item">
                    <a class="nav-link" href="#">@category.Category.CategoryName</a>
                </li>
            }
        </ul>

    </div>

</div>
<div class="row">

    <div class="col-lg-9 mb-3">
        <div class="row text-left mb-5">
            <div class="col-lg-6 mb-3 mb-sm-0">
                <div class="dropdown bootstrap-select form-control form-control-lg bg-white bg-op-9 text-sm w-lg-50"
                     style="width: 100%;">
                    <select class="form-control rounded-0"
                            data-toggle="select" tabindex="-98">
                        <option> Kategoriler </option>
                        @foreach (var category in Model.NewestTopic)
                        {
                            <option> @category.Category.CategoryName </option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-lg-6 text-lg-right">
                <div class="dropdown bootstrap-select form-control form-control-lg bg-white bg-op-9 ml-auto text-sm w-lg-50"
                     style="width: 100%;">
                    <form class="d-flex" role="search">
                        <input class="form-control me-2 rounded-0" type="search" placeholder="Konu Ara" aria-label="Search">
                        <button class="btn btn-primary rounded-0" style="background-color: #035AA6;" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>

                </div>
            </div>
        </div>
        @foreach (var topic in Model.NewestTopic)
        {
            <div class="card row-hover pos-relative py-3 px-3 mb-3 border-warning border-top-0 border-right-0 border-bottom-0 rounded-0">
                <div class="row align-items-center">
                    <div class="col-md-8 mb-3 mb-sm-0">
                        <h5>
                            <a asp-action="Index" asp-controller="Konu" asp-route-id="@topic.TopicID" class="text-primary">@topic.TopicTitle</a>
                        </h5>
                        <p class="text-sm">
                            <span class="op-6">Göneri Tarihi</span>
                            <a class="text-black" href="#">
                                @{

                                    var tarih = @DateTime.Now - @Convert.ToDateTime(topic.TopicsDate);

                                }
                                @tarih.Days gün @tarih.Hours saat @tarih.Minutes Dakika Önce

                            </a>
                            
                                <span class="op-6">Kullanıcı Adı</span> <a class="text-black"
                                                                           href="#"> @*topic.AppUser.Name*@</a>
                           
                        </p>
                        <div class="text-sm op-5">
                            Kategori :
                            <a class="text-black mr-2" href="#">@topic.Category.CategoryName</a>
                        </div>
                    </div>
                    <div class="col-md-4 op-7">
                        <div class="row text-center op-7">
                            <div class="col px-1">
                                <i class="ion-connection-bars icon-1x"></i> <span class="d-block text-sm">@topic.TopicVotes Oy</span>
                            </div>
                            <div class="col px-1">
                                <i class="ion-ios-chatboxes-outline icon-1x"></i> <span class="d-block text-sm">122</span>
                            </div>
                            <div class="col px-1">
                                <i class="ion-ios-eye-outline icon-1x"></i> <span class="d-block text-sm">290</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }





    </div>

    <div class="col-lg-3 mb-4 mb-lg-0 px-lg-0 mt-lg-0">
        <div style="visibility: hidden; display: none; width: 285px; height: 801px; margin: 0px; float: none; position: static; inset: 85px auto auto;">
        </div>
        <div data-settings="{&quot;parent&quot;:&quot;#content&quot;,&quot;mind&quot;:&quot;#header&quot;,&quot;top&quot;:10,&quot;breakpoint&quot;:992}"
             data-toggle="sticky" class="sticky" style="top: 85px;">
            <div class="sticky-inner">

                <div class="bg-white mb-3">
                    <h4 class="px-3 py-4 op-5 m-0">
                        En Çok Konuşulan Konular
                    </h4>

                    <hr class="m-0">
                    @foreach (var item in Model.MostVotedTopic)
                    {
                        <div class="pos-relative px-3 py-3">
                            <h6 class="text-primary text-sm">
                                <a href="#" class="text-primary">@item.TopicTitle</a>
                            </h6>
                            <p class="mb-0 text-sm">
                                <span class="op-6">Posted</span> <a class="text-black"
                                                                    href="#">39 minutes</a> <span class="op-6">ago by</span> <a class="text-black"
                                                                                                                                href="#">AppStrapMaster</a>
                            </p>
                        </div>
                        <hr class="m-0">
                    }



                    <hr class="m-0">
                </div>
                <div class="bg-white text-sm">
                    <h4 class="px-3 py-4 op-5 m-0 roboto-bold">
                        İstatistik
                    </h4>
                    <hr class="my-0">
                    <div class="row text-center d-flex flex-row op-7 mx-0">
                        <div class="col-sm-6 flex-ew text-center py-3 border-bottom border-right">
                            <a class="d-block lead font-weight-bold" href="#">@Model.istatistik</a> Konular
                        </div>
                        <div class="col-sm-6 col flex-ew text-center py-3 border-bottom mx-0">
                            <a class="d-block lead font-weight-bold" href="#">1.856</a> Gönderiler
                        </div>
                    </div>
                    <div class="row d-flex flex-row op-7">
                        <div class="col-sm-6 flex-ew text-center py-3 border-right mx-0">
                            <a class="d-block lead font-weight-bold" href="#">@Model.userSayisi</a> Üyeler
                        </div>
                        <div class="col-sm-6 flex-ew text-center py-3 mx-0">
                            <a class="d-block lead font-weight-bold" href="#">
                            </a> En Yeni Üye
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
