@model List<Category>
<ol class="breadcrumb mb-4">
    <li<h1 class="mt-4">Tüm Konular</h1>
 <div class="breadcrumb-item active">Admin</li>
</ol>
<div class="row">
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            <a class="btn btn-primary" asp-controller="Kategori" asp-action="YeniKategori" asp-area="Admin"> Yeni Kategori Ekle</a>
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th>Bağlı Konu Sayısı</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th>Bağlı Konu Sayısı</th>
                        <th>Güncelle</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.CategoryID</td>
                            <td>@category.CategoryName</td>
                            <td>
                                @await Component.InvokeAsync("CategoryTopic", new { @categoriesid = category.CategoryID })
                            </td>
                            
                            <td> <a class="btn btn-primary" asp-action="KategoriGuncelle" asp-controller="Kategori" asp-area="Admin" asp-route-id=@category.CategoryID>Güncelle</a></td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>

</div>